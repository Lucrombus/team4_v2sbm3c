<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace = "dev.mvc.contactad.ContactadDAOInter">
  
  <insert id="create" parameterType="dev.mvc.contactad.ContactadDAOInter">
    INSERT INTO contactad(contactadno, contactadr) 
    VALUES (contactad_seq.nextval, #{contactadr})
  </insert>
  
  <select id="list" resultType="dev.mvc.contactad.ContactadDAOInter">
    SELECT contactadno, contactadr
    FROM contactad
    ORDER BY contactadno ASC;
  </select>
  
  <!-- contactadno로 주소 조회 -->
  <select id="read" resultType="dev.mvc.contactad.ContactadDAOInter" parameterType="int">
    SELECT contactadno, contactadr
    FROM contactad
    WHERE contactadno = #{contactadno}
  </select>  
  
  <!-- memberno로 회원 정보 수정 -->
  <update id="update" parameterType="dev.mvc.contactad.ContactadDAOInter">
    UPDATE contactad
    SET contactadr=#{contactadr}
    WHERE contactadno=#{contactadno}
  </update>
  
  <delete id="delete" parameterType="int">
    DELETE FROM contactad
    WHERE contactadno=#{contactadno}
  </delete>
  
</mapper>