<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="dev.mvc.mypage.MypageDAOInter">

  <!-- 등록: 관심 구인 등록 -->
  <insert id="create_like_guin" parameterType="dev.mvc.mypage.MypageVO">
    INSERT INTO like_guin(like_guinno, memberno, guin_cno)
    VALUES(resume_seq.nextval, #{memberno}, #{guin_cno}
  </insert>
  
  <!-- 등록: 관심 구직 등록 -->
  <insert id="create_like_gugic" parameterType="dev.mvc.mypage.MypageVO">
    INSERT INTO like_gugic(like_gugicno, memberno, gugic_cno)
    VALUES(resume_seq.nextval, #{memberno}, #{gugic_cno}
  </insert>
  
  <!-- 조회: 나의 관심 구인 조회 -->
  <select id="list_like_guin" resultType="dev.mvc.mypage.MypageVO" parameterType="int">
    SELECT like_guinno, memberno, guin_cno
    FROM like_guin
    WHERE like_guinno = #{like_guinno}
  </select> 
  
  <!-- 조회: 나의 관심 구직 조회 -->
  <select id="list_like_gugic" resultType="dev.mvc.mypage.MypageVO" parameterType="int">
    SELECT like_gugicno, memberno, gugic_cno
    FROM like_gugic
    WHERE like_gugicno = #{like_gugicno}
  </select>
  
  <!-- 삭제: 나의 관심 구인 조회 -->
  <delete id="delete_like_guin" parameterType="int">
    DELETE like_guin
    WHERE like_guinno = #{like_guinno}
  </delete>
  
  <!-- 삭제: 나의 관심 구직 삭제 -->
  <delete id="delete_like_gugic" parameterType="int">
    DELETE like_gugic
    WHERE like_gugicno = #{like_gugicno}
  </delete>
  
</mapper> 




