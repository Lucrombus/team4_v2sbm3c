<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace = "dev.mvc.inquiry.InquiryDAOInter">
  
  <insert id="create" parameterType="dev.mvc.inquiry.InquiryDAOInter">
    INSERT INTO inquiry(inquiryno, memberno, inquiryTitle, inquiryReason, answer) 
    VALUES(inquiry_seq.nextval, #{memberno}, #{inquiryTitle}, #{inquiryReason}, #{answer})
  </insert>
  
  <!-- 전체 문의 목록 출력
  <select id="list" resultType="dev.mvc.inquiry.InquiryDAOInter">
    SELECT inquiryno, memberno, inquiryTitle, inquiryReason, contentsno
    FROM inquiry
    ORDER BY inquiryno ASC
  </select>
   -->
  <!-- memberno와 inquiryno에 따른 문의 정보 조회 
  <select id="read" resultType="dev.mvc.inquiry.InquiryDAOInter" parameterType="int">
    SELECT inquiryno, memberno, inquiryTitle, inquiryReason, contentsno
    FROM member
    WHERE memberno = #{memberno} AND inquiryno = #{inquiryno}
  </select>  
  -->
</mapper>